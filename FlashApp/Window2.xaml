<Window x:Class="FlashApp.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlashApp"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <TextBlock x:Name="Question" HorizontalAlignment="Left" Margin="52,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="63" Width="187">
            <TextBlock.RenderTransform>
                <ScaleTransform ScaleX="2.5" ScaleY="2.5" />
            </TextBlock.RenderTransform>
            Szöveg
        </TextBlock>
        <Button x:Name="Check_Button" Content="Check" HorizontalAlignment="Center" Margin="0,353,0,0" VerticalAlignment="Top" Height="47" Width="93" Click="Check"/>
        <TextBlock x:Name="Answer" HorizontalAlignment="Left" Margin="52,234,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="106">
            <TextBlock.RenderTransform>
                <ScaleTransform ScaleX="2.5" ScaleY="2.5" />
            </TextBlock.RenderTransform>
                Válasz
        </TextBlock>
    </Grid>
</Window>
